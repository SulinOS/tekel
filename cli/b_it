PATH=$PATH:/usr/libexec/bakkal/api
script_url=$(get_script_url $2)
curl $script_url > $HOME/.bakkal/tmp/$2.sh
. $HOME/.bakkal/tmp/$2.sh
rm -rf "/data/app/$USER/$2"
mkdir -p "/data/app/$USER/$2"
cd /data/app/$USER/$2
_setup
cd /data/app/$USER/$2
_build
cd /data/app/$USER/$2
_install
touch $HOME/.bakkal/packages/$2
